                <ResourceDictionary Source="/FDS;component/css/mybuttonstyle.xaml">
                </ResourceDictionary>
                <ResourceDictionary Source="/FDS;component/css/sendOTPStyle.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <DropShadowEffect x:Key="shadowEffect"  BlurRadius="100"/>
            <Color x:Key="MyColor">#99E0EBFF</Color>
            <SolidColorBrush x:Key="backgroundcolor" Color="{StaticResource MyColor}" />
            <Style TargetType="Window" x:Key="CustomWindowStyle">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Window">
                            <!-- Border element where CornerRadius is set -->
                            <Border Background="{StaticResource backgroundcolor}" CornerRadius="40">
                                <AdornerDecorator>
                                    <ContentPresenter />
                                </AdornerDecorator>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>



