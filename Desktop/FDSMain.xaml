                        <Button x:Name="btnClose" ToolTip="Minimize Application"  Click="btnClose_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Width="26" Height="26" Foreground="White" BorderThickness="1" Margin="0,13,15,13" Background="{x:Null}" BorderBrush="{x:Null}">
                            <!--<materialDesign:PackIcon Kind="ArrowCompress" VerticalAlignment="Center" />-->
                            <Image Source="Assets/MinimizeIcon.png" Height="18.2" Width="18.2"></Image>
                        </Button>
                        <Button x:Name="btnUninstall" Visibility="Hidden" ToolTip="Request Uninstall" Click="btnUninstall_Click" Style="{StaticResource MaterialDesignFloatingActionButton}" Width="26" Height="26" Foreground="Red" BorderThickness="1" Margin="0,13,18,13" Background="{x:Null}" BorderBrush="{x:Null}">
                            <!--<materialDesign:PackIcon Kind="DeleteCircle" VerticalAlignment="Center" />-->
                            <Image Source="Assets/deleteIcon.png" Height="18.19" Width="12.97"></Image>
                        </Button>

                    </StackPanel>
                    <!--<Image Source="Assets/TitleIcons.png" HorizontalAlignment="Left" Height="50" Width="120" Margin="18,0,0,0"></Image>-->
                    <TextBlock Text="Fusion Data Secure" Foreground="#CED1D4" FontSize="14" FontStyle="Normal" FontWeight="SemiBold" Name="titleFusion" HorizontalAlignment="Center"  
                               VerticalAlignment="Center" Height="21" Width="140" Margin="0,20,0,10"></TextBlock>

                    <TextBlock x:Name="txtCodeVersion" VerticalAlignment="Bottom" Margin="20,0,962,12" Foreground="White" FontSize="14" FontWeight="SemiBold" Height="21"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"  />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Visibility="Hidden" x:Name="txtHome" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,0,0"  FontSize="12" FontWeight="Normal" FontFamily="Radian" PreviewMouseDown="txtHome_PreviewMouseDown" Cursor="Hand">
                            <TextBlock.TextDecorations>
                                <TextDecoration/>
                            </TextBlock.TextDecorations>Home</TextBlock>
                        <TextBlock Grid.Column="1" x:Name="txtMenuService" Visibility="Hidden" Foreground="Blue" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,10,0,0" Text=" / View Running Services " FontWeight="Normal" FontSize="12" />
                    </Grid>
                </Grid>

            </Grid>

        </Grid>
    </Border>
</Window>

